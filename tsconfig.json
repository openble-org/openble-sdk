{
  "compilerOptions": {
    "target": "ESNext",
    "module": "Node16",
    "allowJs": true, // Allow importing .js files
    "resolveJsonModule": true, // Allow importing .json files
    "moduleResolution": "Node16",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true
  },
  "include": ["src/**/*.ts", "src/custom.d.ts"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
